<%- include("./partials/header.ejs")%>

<body>
    <%- include("./partials/navbar.ejs")%>
    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                <h3>Colocar pergunta: </h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/saveQuestion">
                    <label for="titulo">Título: </label>
                    <input id="titulo" name="titulo" type="text" class="form-control" placeholder="Título da pergunta">
                    <label for="pergunta" class="mt-3">Pergunta: </label>
                    <textarea id="pergunta" name="pergunta" class="form-control" placeholder="Deixe aqui a sua pergunta"></textarea>
                    <button class="btn btn-dark mt-3">Perguntar</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include('./partials/scripts.ejs')%>